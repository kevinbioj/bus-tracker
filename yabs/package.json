{
  "name": "yabs",
  "type": "module",
  "scripts": {
    "start": "node build/src/index.js",
    "build": "npm run build:bundle && npm run build:copy-native",
    "build:bundle": "bun build src/ --outdir ./build --target node",
    "build:copy-native": "cp node_modules/better-sqlite3/build/Release/better_sqlite3.node build/",
    "format": "prettier --config .prettierrc --write src"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "better-sqlite3": "^9.6.0",
    "croner": "^8.0.2",
    "csv-parse": "^5.5.5",
    "dayjs": "^1.11.11",
    "drizzle-orm": "^0.30.10",
    "fast-xml-parser": "^4.3.6",
    "hono": "^4.3.2",
    "protobufjs": "^7.2.6",
    "ts-pattern": "^5.1.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
